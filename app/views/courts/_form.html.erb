<%= form_for @court, url: courts_path, 
:html => { :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :full_address %>
    <%= f.text_field :full_address, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :contact_email %>
    <%= f.text_field :contact_email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :website %>
    <%= f.text_field :website, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :number_courts %>
    <%= f.text_field :number_courts, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :prizes %>
    <%= f.text_field :prizes, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Publish or Update Court Information", class: 'btn btn-primary' %>
    <%= link_to 'Cancel', courts_path, class:'btn btn
  default' %>
  </div>
<% end %>